{
  "compilerOptions": {
    "target": "ES2020", // Specifies version of ECMAScript the code should compile in
    "module": "NodeNext", // What module code should be generated
    "moduleResolution": "NodeNext", // how ts should resolve module imports
    "outDir": "./dist", // redirect output structure to directory
    "rootDir": "./src", // relative to tsconfig.json location
    "strict": true, // enable all strict type-checking options
    "esModuleInterop": true, // allow use of default imports with CommonJS modules
    "skipLibCheck": true // skip type checking all .d.ts files
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*"], // include all files when compiling the project
  "exclude": ["node_modules", "**/*.spec.ts", "frontend"]
}
